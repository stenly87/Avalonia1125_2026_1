<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:Avalonia1125_2026_1.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Avalonia1125_2026_1.MainWindow"
        x:DataType="viewModels:MainViewModel"
        DataContext="{DynamicResource vm}"
        Width="300" Height="400"
        WindowStartupLocation="CenterScreen"
        Title="Потенциальные дежурные">
    <Window.Resources>
        <viewModels:MainViewModel x:Key="vm"/>
    </Window.Resources>
    <Grid RowDefinitions="* Auto">
        <ListBox ItemsSource="{Binding Humans}"/>
        <Button Grid.Row="1" HorizontalAlignment="Center" Content="Выбрать дежурных" Command="{Binding SelectDutyMan}" />
    </Grid>
</Window>
